{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_ami": "ami-d206bdb2",
    "aws_vpc": "{{env `AWS_VPC_ID`}}",
    "aws_subnet": "{{env `AWS_SUBNET_ID`}}",
    "ssh_username": "ubuntu"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "instance_type": "m3.medium",
      "source_ami": "{{user `aws_ami`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "subnet_id": "{{user `aws_subnet`}}",
      "vpc_id": "{{user `aws_vpc`}}",
      "associate_public_ip_address": true,
      "ami_name":"packer-intermediate {{timestamp}}"
    }
  ],
  "provisioners": [
   {
      "type": "shell",
      "inline": [
          "sudo apt-get -y update; sudo apt-get -y install docker.io awscli"
        ]
   },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "chef/cookbooks"
      ],
      "json": {
	"rbenv": {
	    "rubies": ["2.3.3"],
	    "gems": {"2.3.3": [{"name":"bundler"}]}
	}
      },
      "run_list": [
	"ruby_build",
        "ruby_rbenv::system"
      ]
   },
   {
     "type": "file",
     "source": "../tmp/repo.tgz",
     "destination": "/home/ubuntu/repo.tgz"
   },
   {
     "type": "shell",
     "inline": [
	  "export AWS_ACCESS_KEY_ID={{user `aws_access_key`}}; export AWS_SECRET_ACCESS_KEY={{user ``aws_secret_key``}}; export AWS_REGION={{user ``aws_region``}}; cd /home/ubuntu; tar xzvf repo.tgz --one-top-level; cd repo; bundle; bundle exec rake build:artifacts; touch /tmp/done"
	]
   },
   {
     "type": "file",
     "source": "/tmp/done",
     "destination": "/tmp/done",
     "direction": "download"
   }
  ],
  "post-processors": [
    {
	"type": "artifice",
	"files": ["/tmp/done"]
    }
  ]
}
