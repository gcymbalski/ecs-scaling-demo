{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_ami": "ami-d206bdb2",
    "aws_vpc": "{{env `AWS_VPC_ID`}}",
    "aws_subnet": "{{env `AWS_SUBNET_ID`}}",
    "ssh_username": "ubuntu",
    "build_uuid": "{{env `BUILD_UUID`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "instance_type": "m3.large",
      "source_ami": "{{user `aws_ami`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "subnet_id": "{{user `aws_subnet`}}",
      "vpc_id": "{{user `aws_vpc`}}",
      "associate_public_ip_address": true,
      "run_tags": {
	"build_uuid": "{{user `build_uuid`}}"
      },
      "ami_name":"packer-intermediate {{timestamp}}"
    }
  ],
  "provisioners": [
   {
      "type": "shell",
      "inline": [
          "sudo apt-get -y update",
	  "sudo apt-get -y install docker.io awscli curl",
	  "curl https://releases.hashicorp.com/packer/0.12.2/packer_0.12.2_linux_amd64.zip | zcat > packer; chmod +x packer; sudo mv packer /usr/local/bin",
	  "mkdir -p /home/ubuntu/repo"
        ]
   },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "chef/cookbooks"
      ],
      "json": {
	"rbenv": {
	    "rubies": ["2.3.3"],
	    "global": "2.3.3",
	    "gems": {"2.3.3": [{"name":"bundler"}]},
	    "plugins": [{"name": "rbenv-gem-rehash", "git_url": "https://github.com/rbenv/rbenv-gem-rehash.git", "git_ref": "v1.0.0"}]
	}
      },
      "run_list": [
	"ruby_build",
        "ruby_rbenv::system"
      ]
   },
   {
	"type": "file",
	"source": "../",
        "destination": "/home/ubuntu/repo"
   },
   {
     "type": "shell",
     "environment_vars": ["AWS_ACCESS_KEY={{user `aws_secret_key`}}", "AWS_SECRET_ACCESS_KEY={{user `aws_secret_key`}}", "AWS_REGION={{user `aws_region`}}" ],
     "script": "scripts/buildartifacts-remote.sh"
   },
   {
     "type": "file",
     "source": "/tmp/done",
     "destination": "/tmp/done",
     "direction": "download"
   }
  ],
  "post-processors": [
    {
	"type": "artifice",
	"files": ["/tmp/done"]
    }
  ]
}
